<Window
    x:Class="WpfMultibleViews.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfMultibleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WpfMultibleViews.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontSize="30"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition Height="4*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock
            Name="CounterTxtB"
            Grid.Row="1"
            Grid.Column="2"
            Background="SlateGray"
            Foreground="BlanchedAlmond" 
            TextAlignment="Center"
            Text="Counter"/>
        <views:DecreaseView Grid.Row="2" Grid.Column="1"></views:DecreaseView>
        <views:ClearView Grid.Row="2" Grid.Column="2"></views:ClearView>
        <views:IncreaseView Grid.Row="2" Grid.Column="3"></views:IncreaseView>
    </Grid>
</Window>
