<Window
    x:Class="WpfMultibleViews.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfMultibleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WpfMultibleViews.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontSize="30"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Counter">
                <views:CounterView Loaded="CounterView_Loaded"/>
            </TabItem>
            <TabItem Header="People">
                <views:PeopleView></views:PeopleView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
